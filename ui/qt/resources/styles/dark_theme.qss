/* OpenGalaxy Light Theme - Clean & Modern */

/* Global Styles */
* {
    font-family: "Segoe UI", "Ubuntu", "Roboto", sans-serif;
    font-size: 14px;
}

/* Main Window */
QMainWindow {
    background: #f8f7f5;
}

/* Title Bar */
QWidget#titleBar {
    background: #3c3a37;
    border-bottom: 1px solid #2a2826;
}

/* Window Control Buttons - Override default button styles */
QPushButton#minimizeButton,
QPushButton#maximizeButton,
QPushButton#closeButton {
    background: transparent;
    border: none;
    border-radius: 0px;
    color: #ffffff;
    padding: 0px;
}

QPushButton#minimizeButton:hover,
QPushButton#maximizeButton:hover {
    background: rgba(255, 255, 255, 0.1);
}

QPushButton#closeButton:hover {
    background: #e81123;
    color: #ffffff;
}

QPushButton#minimizeButton:pressed,
QPushButton#maximizeButton:pressed {
    background: rgba(255, 255, 255, 0.15);
}

QPushButton#closeButton:pressed {
    background: #c50712;
    color: #ffffff;
}

/* Sidebar Navigation */
QListWidget#sidebar {
    background: #3c3a37;
    border: none;
    border-right: 1px solid #2a2826;
    outline: none;
}

QListWidget#sidebar::item {
    color: #c8c6c4;
    padding: 16px 24px;
    border-left: 3px solid transparent;
    margin: 4px 0;
}

QListWidget#sidebar::item:hover {
    background: #4a4845;
    color: #ffffff;
}

QListWidget#sidebar::item:selected {
    background: #5a5855;
    border-left: 3px solid #6c5ce7;
    color: #ffffff;
    font-weight: 600;
}

/* Buttons */
QPushButton {
    background: #6c5ce7;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton:hover {
    background: #5f3dc4;
}

QPushButton:pressed {
    background: #4c2d9f;
}

QPushButton:disabled {
    background: #d0cec9;
    color: #8a8884;
}

QPushButton#playButton {
    background: #27ae60;
    font-size: 16px;
    padding: 12px 28px;
}

QPushButton#playButton:hover {
    background: #229954;
}

QPushButton#secondaryButton {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

QPushButton#secondaryButton:hover {
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Input Fields */
QLineEdit {
    background: #ffffff;
    border: 2px solid #e8e6e3;
    border-radius: 6px;
    padding: 10px 14px;
    color: #3c3a37;
    selection-background-color: #6c5ce7;
}

QLineEdit:focus {
    border: 2px solid #6c5ce7;
    background: #ffffff;
}

QLineEdit::placeholder {
    color: #8a8884;
}

/* Scroll Areas */
QScrollArea {
    border: none;
    background: transparent;
}

QScrollBar:vertical {
    background: #e8e6e3;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #6c5ce7;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #5f3dc4;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background: #e8e6e3;
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #6c5ce7;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #5f3dc4;
}

/* Labels */
QLabel {
    color: #3c3a37;
}

QLabel#titleLabel {
    font-size: 32px;
    font-weight: 700;
    color: #3c3a37;
}

QLabel#subtitleLabel {
    font-size: 18px;
    font-weight: 600;
    color: #5a5855;
}

QLabel#sectionTitle {
    font-size: 20px;
    font-weight: 600;
    color: #3c3a37;
    padding: 8px 0;
}

/* Game Cards */
QFrame#gameCard {
    background: #ffffff;
    border-radius: 12px;
    border: 1px solid #e8e6e3;
    padding: 0px;
}

QFrame#gameCard:hover {
    background: #ffffff;
    border: 2px solid #6c5ce7;
    padding: -1px;
}

/* Tabs */
QTabWidget::pane {
    border: none;
    background: transparent;
}

QTabBar::tab {
    background: rgba(255, 255, 255, 0.05);
    color: #b8b8d1;
    padding: 12px 24px;
    border: none;
    border-bottom: 3px solid transparent;
    margin-right: 4px;
}

QTabBar::tab:hover {
    background: rgba(255, 255, 255, 0.08);
    color: white;
}

QTabBar::tab:selected {
    background: rgba(108, 92, 231, 0.15);
    color: white;
    border-bottom: 3px solid #6c5ce7;
    font-weight: 600;
}

/* Combo Box */
QComboBox {
    background: #ffffff;
    border: 2px solid #e8e6e3;
    border-radius: 6px;
    padding: 8px 12px;
    color: #3c3a37;
}

QComboBox:hover {
    border: 2px solid #6c5ce7;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: url(:/icons/arrow-down.png);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background: #ffffff;
    border: 1px solid #e8e6e3;
    border-radius: 6px;
    selection-background-color: #6c5ce7;
    color: #3c3a37;
    padding: 4px;
}

/* Check Box */
QCheckBox {
    color: #3c3a37;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 3px;
    border: 2px solid #d0cec9;
    background: #ffffff;
}

QCheckBox::indicator:hover {
    border: 2px solid #6c5ce7;
    background: #ffffff;
}

QCheckBox::indicator:checked {
    background: #6c5ce7;
    border: 2px solid #6c5ce7;
}

/* Progress Bar */
QProgressBar {
    background: #e8e6e3;
    border: none;
    border-radius: 6px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background: #6c5ce7;
    border-radius: 6px;
}

/* Menu Bar */
QMenuBar {
    background: rgba(26, 15, 46, 0.95);
    color: white;
    border-bottom: 1px solid rgba(124, 77, 255, 0.2);
}

QMenuBar::item {
    padding: 8px 16px;
    background: transparent;
}

QMenuBar::item:selected {
    background: rgba(124, 77, 255, 0.2);
}

QMenu {
    background: #2d1b4e;
    border: 1px solid rgba(124, 77, 255, 0.3);
    border-radius: 8px;
    padding: 8px;
}

QMenu::item {
    padding: 10px 24px;
    border-radius: 6px;
    color: white;
}

QMenu::item:selected {
    background: rgba(124, 77, 255, 0.3);
}

/* Tooltips */
QToolTip {
    background: #2d1b4e;
    color: white;
    border: 1px solid rgba(124, 77, 255, 0.5);
    border-radius: 6px;
    padding: 8px 12px;
}

/* Status Bar */
QStatusBar {
    background: rgba(26, 15, 46, 0.95);
    color: #b8b8d1;
    border-top: 1px solid rgba(124, 77, 255, 0.2);
}

/* Splitter */
QSplitter::handle {
    background: rgba(124, 77, 255, 0.2);
}

QSplitter::handle:hover {
    background: rgba(124, 77, 255, 0.4);
}

/* Group Box */
QGroupBox {
    border: 2px solid #e8e6e3;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 16px;
    color: #3c3a37;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background: #f8f7f5;
}

/* Notification Widget */
QFrame#notification {
    background: rgba(45, 27, 78, 0.95);
    border: 1px solid rgba(124, 77, 255, 0.5);
    border-radius: 12px;
    padding: 16px;
}

QFrame#notificationSuccess {
    border-left: 4px solid #00e676;
}

QFrame#notificationError {
    border-left: 4px solid #ff5252;
}

QFrame#notificationWarning {
    border-left: 4px solid #ffc107;
}

QFrame#notificationInfo {
    border-left: 4px solid #2196f3;
}
