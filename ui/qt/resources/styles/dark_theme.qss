/* OpenGalaxy Dark Theme - GOG Galaxy 2.0 Style */

/* Global Styles */
* {
    font-family: "Segoe UI", "Ubuntu", "Roboto", sans-serif;
    font-size: 14px;
}

/* Main Window */
QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #1a0f2e, stop:1 #2d1b4e);
}

/* Sidebar Navigation */
QListWidget#sidebar {
    background: rgba(26, 15, 46, 0.95);
    border: none;
    border-right: 1px solid rgba(124, 77, 255, 0.2);
    outline: none;
}

QListWidget#sidebar::item {
    color: #b8b8d1;
    padding: 16px 24px;
    border-left: 3px solid transparent;
    margin: 4px 0;
}

QListWidget#sidebar::item:hover {
    background: rgba(124, 77, 255, 0.1);
    color: #ffffff;
}

QListWidget#sidebar::item:selected {
    background: rgba(124, 77, 255, 0.2);
    border-left: 3px solid #7c4dff;
    color: #ffffff;
    font-weight: 600;
}

/* Buttons */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #7c4dff, stop:1 #6a3de8);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #8c5dff, stop:1 #7a4df8);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #6c3def, stop:1 #5a2dd8);
}

QPushButton:disabled {
    background: #3a3a4e;
    color: #6a6a7e;
}

QPushButton#playButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #00e676, stop:1 #00c853);
    font-size: 16px;
    padding: 14px 32px;
}

QPushButton#playButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #00ff88, stop:1 #00d65f);
}

QPushButton#secondaryButton {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

QPushButton#secondaryButton:hover {
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Input Fields */
QLineEdit {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(124, 77, 255, 0.3);
    border-radius: 8px;
    padding: 12px 16px;
    color: white;
    selection-background-color: #7c4dff;
}

QLineEdit:focus {
    border: 2px solid #7c4dff;
    background: rgba(255, 255, 255, 0.08);
}

QLineEdit::placeholder {
    color: rgba(255, 255, 255, 0.4);
}

/* Scroll Areas */
QScrollArea {
    border: none;
    background: transparent;
}

QScrollBar:vertical {
    background: rgba(255, 255, 255, 0.05);
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: rgba(124, 77, 255, 0.5);
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(124, 77, 255, 0.7);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background: rgba(255, 255, 255, 0.05);
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: rgba(124, 77, 255, 0.5);
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: rgba(124, 77, 255, 0.7);
}

/* Labels */
QLabel {
    color: #e0e0e0;
}

QLabel#titleLabel {
    font-size: 32px;
    font-weight: 700;
    color: white;
}

QLabel#subtitleLabel {
    font-size: 18px;
    font-weight: 600;
    color: #b8b8d1;
}

QLabel#sectionTitle {
    font-size: 20px;
    font-weight: 600;
    color: white;
    padding: 8px 0;
}

/* Game Cards */
QFrame#gameCard {
    background: rgba(45, 27, 78, 0.6);
    border-radius: 12px;
    border: 1px solid rgba(124, 77, 255, 0.2);
}

QFrame#gameCard:hover {
    background: rgba(55, 37, 88, 0.8);
    border: 1px solid rgba(124, 77, 255, 0.4);
}

/* Tabs */
QTabWidget::pane {
    border: none;
    background: transparent;
}

QTabBar::tab {
    background: rgba(255, 255, 255, 0.05);
    color: #b8b8d1;
    padding: 12px 24px;
    border: none;
    border-bottom: 3px solid transparent;
    margin-right: 4px;
}

QTabBar::tab:hover {
    background: rgba(255, 255, 255, 0.08);
    color: white;
}

QTabBar::tab:selected {
    background: rgba(124, 77, 255, 0.2);
    color: white;
    border-bottom: 3px solid #7c4dff;
    font-weight: 600;
}

/* Combo Box */
QComboBox {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(124, 77, 255, 0.3);
    border-radius: 8px;
    padding: 10px 16px;
    color: white;
}

QComboBox:hover {
    border: 2px solid rgba(124, 77, 255, 0.5);
}

QComboBox::drop-down {
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: url(:/icons/arrow-down.png);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background: #2d1b4e;
    border: 1px solid rgba(124, 77, 255, 0.3);
    border-radius: 8px;
    selection-background-color: rgba(124, 77, 255, 0.3);
    color: white;
    padding: 4px;
}

/* Check Box */
QCheckBox {
    color: #e0e0e0;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    border: 2px solid rgba(124, 77, 255, 0.5);
    background: rgba(255, 255, 255, 0.05);
}

QCheckBox::indicator:hover {
    border: 2px solid #7c4dff;
    background: rgba(255, 255, 255, 0.08);
}

QCheckBox::indicator:checked {
    background: #7c4dff;
    border: 2px solid #7c4dff;
}

/* Progress Bar */
QProgressBar {
    background: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 8px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #7c4dff, stop:1 #00e676);
    border-radius: 8px;
}

/* Menu Bar */
QMenuBar {
    background: rgba(26, 15, 46, 0.95);
    color: white;
    border-bottom: 1px solid rgba(124, 77, 255, 0.2);
}

QMenuBar::item {
    padding: 8px 16px;
    background: transparent;
}

QMenuBar::item:selected {
    background: rgba(124, 77, 255, 0.2);
}

QMenu {
    background: #2d1b4e;
    border: 1px solid rgba(124, 77, 255, 0.3);
    border-radius: 8px;
    padding: 8px;
}

QMenu::item {
    padding: 10px 24px;
    border-radius: 6px;
    color: white;
}

QMenu::item:selected {
    background: rgba(124, 77, 255, 0.3);
}

/* Tooltips */
QToolTip {
    background: #2d1b4e;
    color: white;
    border: 1px solid rgba(124, 77, 255, 0.5);
    border-radius: 6px;
    padding: 8px 12px;
}

/* Status Bar */
QStatusBar {
    background: rgba(26, 15, 46, 0.95);
    color: #b8b8d1;
    border-top: 1px solid rgba(124, 77, 255, 0.2);
}

/* Splitter */
QSplitter::handle {
    background: rgba(124, 77, 255, 0.2);
}

QSplitter::handle:hover {
    background: rgba(124, 77, 255, 0.4);
}

/* Group Box */
QGroupBox {
    border: 2px solid rgba(124, 77, 255, 0.3);
    border-radius: 12px;
    margin-top: 12px;
    padding-top: 16px;
    color: white;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background: #2d1b4e;
}

/* Notification Widget */
QFrame#notification {
    background: rgba(45, 27, 78, 0.95);
    border: 1px solid rgba(124, 77, 255, 0.5);
    border-radius: 12px;
    padding: 16px;
}

QFrame#notificationSuccess {
    border-left: 4px solid #00e676;
}

QFrame#notificationError {
    border-left: 4px solid #ff5252;
}

QFrame#notificationWarning {
    border-left: 4px solid #ffc107;
}

QFrame#notificationInfo {
    border-left: 4px solid #2196f3;
}
